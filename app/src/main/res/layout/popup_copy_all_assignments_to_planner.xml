<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnta.homeworkappv2.popup.CopyAssignmentsPopup">


    <TextView
        android:id="@+id/textView24"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Copy Assignments"

        android:background="@drawable/background_names"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        android:padding="5sp"

        />

    <Button
        android:id="@+id/popup_copyAssignments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Copy All"

        android:onClick="onClickCopyCloud"

        percent:layout_marginPercent = "2.5%"
        android:background="@drawable/settingsbutton1"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/button24"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/popup_copyAssignments"
        android:layout_alignStart="@+id/popup_copyAssignments"
        android:layout_alignEnd="@id/popup_copyAssignments"
        android:layout_alignRight="@id/popup_copyAssignments"
        android:layout_below="@+id/popup_copyAssignments"
        android:text="Cancel"

        android:onClick="onClickCancel"

        android:background="@drawable/settingsbutton1"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>
</android.support.percent.PercentRelativeLayout>
