<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/popup_copyAssignmentToHub_transfer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Transfer"

        percent:layout_marginPercent = "2.5%"

        android:background="@drawable/settingsbutton1"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        android:onClick="onClickDoStuff"/>

    <Button
        android:id="@+id/button20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/popup_copyAssignmentToHub_transfer"
        android:layout_alignRight="@+id/popup_copyAssignmentToHub_transfer"
        android:layout_alignStart="@id/popup_copyAssignmentToHub_transfer"
        android:layout_alignLeft="@id/popup_copyAssignmentToHub_transfer"
        android:layout_below="@+id/popup_copyAssignmentToHub_transfer"
        android:text="Cancel"

        android:background="@drawable/settingsbutton1"
        android:textColor="@android:color/white"
        android:textSize="20sp"

        android:onClick="onClickReturn"
        />

    <TextView
        android:id="@+id/popup_copyAssignmentPlanner_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/popup_copyAssignmentToHub_transfer"
        android:layout_centerHorizontal="true"
        android:text="TextView"

        android:layout_alignEnd="@+id/popup_copyAssignmentToHub_transfer"
        android:layout_alignRight="@+id/popup_copyAssignmentToHub_transfer"
        android:layout_alignStart="@id/popup_copyAssignmentToHub_transfer"
        android:layout_alignLeft="@id/popup_copyAssignmentToHub_transfer"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"

        android:background="@drawable/background_white_textfields"
        android:padding="5sp"
        />


</android.support.percent.PercentRelativeLayout>
