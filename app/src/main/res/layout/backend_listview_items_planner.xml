<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/name_of_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        android:padding="5sp"
        android:hint="Class Name"

        android:textStyle="bold"
        android:editable="false"
        />

    <TextView
        android:id="@+id/homework_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="5sp"
        android:hint="Class Assignment"
        android:editable="false"
        android:textSize="20sp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_toRightOf="@+id/name_of_class"
        android:layout_toEndOf="@+id/name_of_class"
        android:layout_alignBottom="@+id/name_of_class"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/backend_listViewItemsPlanner_subtract"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/subtract_icon"
        android:onClick=""
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/name_of_class"

        android:layout_marginRight="2.5sp"/>

    <ImageButton
        android:id="@+id/backend_listViewItemsPlanner_transfer"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/transfer_icon"

        android:layout_marginRight="2.5sp"

        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/backend_listViewItemsPlanner_subtract"
        android:layout_toStartOf="@+id/backend_listViewItemsPlanner_subtract"
        android:layout_alignBottom="@+id/backend_listViewItemsPlanner_subtract" />

</RelativeLayout>