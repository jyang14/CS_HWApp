<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/preface_popup_background">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_border_black">

        <EditText
            android:id="@+id/class_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_textfields"
            android:padding="10sp"
            android:inputType="text"

            android:ems="26"
            android:gravity="center"

            android:hint="@string/hint_enter_class_assignment"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/name_of_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@drawable/background_white_textfields"
            android:padding="10sp"
            android:ems="26"
            android:gravity="center"
            android:hint="@string/hint_enter_class_name"
            android:textSize="20sp"
            android:layout_above="@id/class_assignment"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"/>


        <Button
            android:id="@+id/button_popup_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingsbutton1"
            android:onClick="onClickEditList"
            android:text="Finish"
            android:layout_below="@id/class_assignment"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"/>




    </RelativeLayout>
</LinearLayout>