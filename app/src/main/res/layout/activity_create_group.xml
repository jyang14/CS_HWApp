<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnta.homeworkappv2.popup.CreateAGroup">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Create a group"

        android:gravity="center"
        android:textSize="40sp"
        android:background="@drawable/settingsbutton1"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Enter a group name"
        percent:layout_marginLeftPercent = "3%"
        percent:layout_marginRightPercent = "3%"
        android:padding="10dp"

        android:background="@drawable/background_white_textfields"/>

    <Button
        android:id="@+id/button16"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        percent:layout_marginTopPercent = "1%"
        percent:layout_marginRightPercent = "3%"

        android:text="Create"
        android:padding="5dp"

        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/settingsbutton1"
        android:textColor="@android:color/white"

        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <Button
        android:id="@+id/button17"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Cancel"

        percent:layout_marginTopPercent = "1%"
        percent:layout_marginRightPercent = "3%"

        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/settingsbutton1"
        android:textColor="@android:color/white"

        android:layout_below="@+id/button16"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"/>


</android.support.percent.PercentRelativeLayout>
