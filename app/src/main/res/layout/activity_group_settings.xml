<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnta.homeworkappv2.activities.GroupSettingsActivity">


    <TextView
        android:id="@+id/textView22"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Group Settings"

        android:gravity="center"
        android:textSize="40sp"
        android:padding="5sp"
        android:background="@drawable/background_names"
        android:textColor="@android:color/white"

        />

    <TextView
        android:id="@+id/textView23"
        percent:layout_widthPercent = "95%"

        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:text="Group Name"

        percent:layout_marginTopPercent = "1%"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5sp"
        android:background="@drawable/settingsbutton1"/>

    <TextView
        android:id="@+id/groupSettings_name_textView"
        percent:layout_widthPercent = "90%"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:text=""

        percent:layout_marginTopPercent = "1%"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5sp"

        android:background="@drawable/background_white_textfields"/>

    <TextView
        android:id="@+id/textView25"
        percent:layout_widthPercent = "95%"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupSettings_name_textView"
        android:layout_centerHorizontal="true"
        android:text="Group ID"

        percent:layout_marginTopPercent = "1%"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5sp"
        android:background="@drawable/settingsbutton1"/>

    <TextView
        android:id="@+id/groupSettings_ID_textView"
        percent:layout_widthPercent = "90%"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:text=""

        percent:layout_marginTopPercent = "1%"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5sp"

        android:background="@drawable/background_white_textfields"/>

    <Button
        android:id="@+id/button19"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Return"

        percent:layout_marginTopPercent = "1%"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="5sp"
        android:background="@drawable/settingsbutton1"

        android:onClick="onClickReturn"/>


</android.support.percent.PercentRelativeLayout>
