<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.johnta.homeworkappv2.MakeScheduleURL_popup"
    android:background="#87ceeb">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_border_black">


        <EditText
            android:id="@+id/scheduleURL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a schedule URL"
            android:gravity="center"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/background_white_textfields"
            android:padding="10dp"
            android:layout_margin="5sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/enterScheduleURL_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/settingsbutton1"
            android:text="Finish"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:onClick="getInput"
            android:layout_below="@id/scheduleURL"
            android:layout_margin="5sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/back_arrow"
            android:onClick="onClickGoBackToBefore"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:onClick="onClickGoBackToPrimary"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterScheduleURL_button"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="Warning: Enter the full URL, based on a previous search" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
